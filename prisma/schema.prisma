// Prisma schema for Mindbridge X (SQLite)
// Additional models will be added as persistence expands.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  emailVerified DateTime?
  name      String?
  image     String?
  passwordHash String?
  projects  Project[]
  specs     OpenApiSpec[]
  apiConnections ApiConnection[]
  toolMappings   ToolMapping[]
  mockRoutes MockRoute[]
  mcpServers McpServer[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts  Account[]
  sessions  Session[]
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  specs       OpenApiSpec[]
  apiConnections ApiConnection[]
  toolMappings   ToolMapping[]
  mockRoutes  MockRoute[]
  mcpServers  McpServer[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, name])
}

model OpenApiSpec {
  id         Int      @id @default(autoincrement())
  userId     Int
  projectId  Int
  rawSpec    String
  format     String   @default("json")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
  mappings ToolMapping[]
}

model ApiConnection {
  id                Int      @id @default(autoincrement())
  userId            Int
  projectId         Int
  baseUrl           String   @default("")
  authType          String   @default("none")
  apiKeyHeaderName  String?
  apiKeyHeaderValue String?
  apiKeyQueryName   String?
  apiKeyQueryValue  String?
  bearerToken       String?
  basicUsername     String?
  basicPassword     String?
  extraHeaders      Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
  mappings ToolMapping[]

  @@index([projectId])
}

model ToolMapping {
  id              Int      @id @default(autoincrement())
  userId          Int
  projectId       Int
  openApiSpecId   Int?
  apiConnectionId Int?
  operationId     String
  method          String
  path            String
  toolName        String
  summary         String?
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User          @relation(fields: [userId], references: [id])
  project       Project       @relation(fields: [projectId], references: [id])
  openApiSpec   OpenApiSpec?  @relation(fields: [openApiSpecId], references: [id])
  apiConnection ApiConnection? @relation(fields: [apiConnectionId], references: [id])

  @@unique([projectId, operationId])
}

model MockRoute {
  id              Int      @id @default(autoincrement())
  userId          Int
  projectId       Int
  name            String?
  description     String?
  method          String
  path            String
  enabled         Boolean  @default(true)
  matchHeaders    Json?
  responseStatus  Int      @default(200)
  responseHeaders Json?
  responseBody    String   @default("")
  responseIsJson  Boolean  @default(false)
  responseDelayMs Int      @default(0)
  templateEnabled Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
  vars   MockRouteVar[]

  @@unique([userId, projectId, method, path])
}

model MockRouteVar {
  id        Int      @id @default(autoincrement())
  routeId   Int
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  route MockRoute @relation(fields: [routeId], references: [id], onDelete: Cascade)

  @@unique([routeId, key])
}

model McpServer {
  id          Int      @id @default(autoincrement())
  userId      Int
  projectId   Int
  name        String
  slug        String
  description String?
  baseUrl     String?
  isEnabled   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user       User      @relation(fields: [userId], references: [id])
  project    Project   @relation(fields: [projectId], references: [id])
  authConfig McpAuthConfig?
  tools      McpTool[]

  @@unique([userId, projectId, slug])
}

model McpAuthConfig {
  id                Int      @id @default(autoincrement())
  serverId          Int      @unique
  authType          String   @default("none")
  apiKeyHeaderName  String?
  apiKeyHeaderValue String?
  apiKeyQueryName   String?
  apiKeyQueryValue  String?
  bearerToken       String?
  basicUsername     String?
  basicPassword     String?
  extraHeaders      Json?

  server McpServer @relation(fields: [serverId], references: [id], onDelete: Cascade)
}

model McpTool {
  id              Int      @id @default(autoincrement())
  serverId        Int
  name            String
  description     String?
  inputSchema     Json?
  httpMethod      String   @default("GET")
  baseUrl         String?
  pathTemplate    String?
  queryMapping    Json?
  bodyMapping     Json?
  headersMapping  Json?
  enabled         Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  server McpServer @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@unique([serverId, name])
}

model HealthCheck {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  note      String?
}

model Account {
  id                Int       @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  oauth_token_secret String?
  oauth_token       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
