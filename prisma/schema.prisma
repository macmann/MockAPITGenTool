// Prisma schema for Mindbridge X (SQLite)
// Additional models will be added as persistence expands.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  /// Default to SQLite for local development; update provider & DATABASE_URL for PostgreSQL when deploying.
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  emailVerified DateTime?
  name      String?
  image     String?
  passwordHash String?
  projects  Project[]
  specs     OpenApiSpec[]
  apiConnections ApiConnection[]
  toolMappings   ToolMapping[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts  Account[]
  sessions  Session[]
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  specs       OpenApiSpec[]
  apiConnections ApiConnection[]
  toolMappings   ToolMapping[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, name])
}

model OpenApiSpec {
  id         Int      @id @default(autoincrement())
  userId     Int
  projectId  Int
  rawSpec    String
  format     String   @default("json")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
  mappings ToolMapping[]
}

model ApiConnection {
  id                Int      @id @default(autoincrement())
  userId            Int
  projectId         Int
  baseUrl           String   @default("")
  authType          String   @default("none")
  apiKeyHeaderName  String?
  apiKeyHeaderValue String?
  apiKeyQueryName   String?
  apiKeyQueryValue  String?
  bearerToken       String?
  basicUsername     String?
  basicPassword     String?
  extraHeaders      Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
  mappings ToolMapping[]

  @@index([projectId])
}

model ToolMapping {
  id              Int      @id @default(autoincrement())
  userId          Int
  projectId       Int
  openApiSpecId   Int?
  apiConnectionId Int?
  operationId     String
  method          String
  path            String
  toolName        String
  summary         String?
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User          @relation(fields: [userId], references: [id])
  project       Project       @relation(fields: [projectId], references: [id])
  openApiSpec   OpenApiSpec?  @relation(fields: [openApiSpecId], references: [id])
  apiConnection ApiConnection? @relation(fields: [apiConnectionId], references: [id])

  @@unique([projectId, operationId])
}

model HealthCheck {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  note      String?
}

model Account {
  id                Int       @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  oauth_token_secret String?
  oauth_token       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
